<form class="body-account" action="/update" method="POST">
    <h3>Account Settings</h3>
    <div class="form-row">
        <div class="form-group col-md-6">
        <label for="inputEmail4">First Name</label>
        <input type="text" class="form-control form-account" id="inputEmail4" name="firstName" value="{{obj.firstName}}">
        </div>
        <div class="form-group col-md-6">
        <label for="inputPassword4">Last Name</label>
        <input type="text" class="form-control form-account" id="inputPassword4" name="lastName" value="{{obj.lastName}}">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
        <label for="inputEmail4">Email</label>
        <input type="email" class="form-control form-account" id="inputEmail4" name="email" value="{{obj.email}}">
        </div>
         <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>
